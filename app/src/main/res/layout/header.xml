<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:padding="20dp"
    android:background="@drawable/background_login"
    tools:context=".HomeActivity">

    <!-- Container User centralizado -->
    <View
        android:id="@+id/containerUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/container_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- Ícone de perfil centralizado dentro do container -->
    <ImageView
        android:id="@+id/perfilContainerUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="@id/containerUser"
        app:layout_constraintEnd_toEndOf="@id/containerUser"
        app:layout_constraintTop_toTopOf="@id/containerUser"
        app:layout_constraintBottom_toBottomOf="@id/containerUser"
        />

    <!-- Nome do usuário alinhado ao início -->
    <TextView
        android:id="@+id/nomeUserContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meu nome"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerUser"
        />

    <!-- E-mail do usuário alinhado ao início -->
    <TextView
        android:id="@+id/emailUserContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meu email"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomeUserContainer"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

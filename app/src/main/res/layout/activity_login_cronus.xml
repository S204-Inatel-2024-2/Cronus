<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginCronus">

    <!-- Fundo de cor sólida -->
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F1E1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Logo ou imagem de padrão -->
    <ImageView
        android:id="@+id/image_pattern_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/image_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Campo para email do Usuário -->
    <EditText
        android:id="@+id/email_login"
        style="@style/Edit_text"
        android:hint="@string/email"
        android:inputType="text"
        android:drawableRight="@drawable/ic_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_pattern_2"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/password"
        style="@style/Edit_text"
        android:layout_marginTop="16dp"
        android:hint="@string/senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_login"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/hide_and_seek"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/visibilidade_senha"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintTop_toTopOf="@id/password"
        app:layout_constraintBottom_toBottomOf="@id/password"
        android:layout_marginEnd="22dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        style="@style/Button"
        android:text="@string/entrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintWidth_percent="0.8" />

        />

    <!-- Botão para "Esqueci minha senha" -->
    <Button
        android:id="@+id/esqueci_minha_senha_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="#F5F1E1"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text="Esqueci minha senha"
        android:textColor="#85CEC3"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button" />

    <!-- Botão para "Criar conta" -->
    <Button
        android:id="@+id/criar_conta_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F5F1E1"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text="Criar conta"
        android:textColor="#85CEC3"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button" />


</androidx.constraintlayout.widget.ConstraintLayout>


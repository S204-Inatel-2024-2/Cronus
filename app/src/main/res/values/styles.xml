<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">320dp</item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Edit_text">
        <item name="android:layout_width">match_parent</item>"
        <item name="android:layout_height">wrap_content</item>"
        <item name="android:background">@drawable/edit_text</item>"
        <item name="android:padding">20dp</item>"
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="Edit_text_Account_Creation">
        <item name="android:layout_width">0dp</item>"
        <item name="android:layout_height">wrap_content</item>"
        <item name="android:background">@drawable/underline_edit_text</item>"
        <item name="android:padding">16dp</item>"
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="CalenderViewCustom">
        <item name="colorControlActivated">@color/purple_700</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>  // color of date selected.
    </style>

</resources>